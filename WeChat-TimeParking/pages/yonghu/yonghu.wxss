/* pages/yonghu/yonghu.wxss */
.avatar-wrapper {
  background: #29faf9;
  padding: 25px 0;
}

.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
}

.avatar-wrapper .avatar image {
  width: 100px;
  height: 100px;
}

.avatar-wrapper .text {
  text-align: center;
  color: #fff;
}

.weui-cell__hd image {
  margin-right: 5px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}

.weui-cells::after{
  content: none;
  border-bottom: none;
}

.weui-cells::before{
  border-top: none;
}
.qianbao{
  margin-right: 5px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
  display: flex;

  margin: 15px 15px 15px 10px; 
  color: #545454;  
  font-size: 14px;
  line-height: 44px;
}
/*登录图片*/.login-icon{ 
   flex: none;
    } 
.login-img{ 
   width: 750rpx;
   }  
    /*表单内容*/
